{
  "name": "market-flow",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "start": "concurrently \"node server.js\" \"vite\"",
    "dev": "concurrently \"node server.js\" \"vite\"",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"node server.js\" \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:build:mac": "vite build && electron-builder --mac"
  },
  "dependencies": {
    "@tiptap/extension-color": "^3.15.3",
    "@tiptap/extension-font-family": "^3.15.3",
    "@tiptap/extension-highlight": "^3.15.3",
    "@tiptap/extension-text-style": "^3.15.3",
    "@tiptap/extension-underline": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "axios": "^1.13.2",
    "body-parser": "^2.2.0",
    "cheerio": "^1.1.2",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "iconv-lite": "^0.7.0",
    "json-server": "^1.0.0-beta.3",
    "lucide-react": "^0.556.0",
    "node-schedule": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reactflow": "^11.11.4",
    "recharts": "^3.5.1",
    "technicalindicators": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.marketflow.app",
    "productName": "衍数",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist-electron/renderer/**/*",
      "electron-main.js",
      "electron-preload.js",
      "server.js",
      "server/**/*",
      "src/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "server.js",
      "server/**/*",
      "src/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "dmg": {
      "title": "衍数 Installer",
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}